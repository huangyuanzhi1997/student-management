<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 创建讀取properties文件的bean -->
	<bean id="propscfg"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:database.properties" />
	</bean>
	<!--獲取數據源bean -->
	<bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
		<property name="driverClassName" value="${driver}" />
		<property name="url" value="${url}" />
		<property name="username" value="${username}" />
		<property name="password" value="${password}" />
	</bean>
	<!-- 生成数据库连接 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="typeAliasesPackage" value="com.hfxt.pojo" />
		<property name="configLocation" value="classpath:mybatis-config.xml" />
		<property name="mapperLocations" value="classpath:*Mapper.xml" />
		<property name="plugins">
			<list>
				<bean class="com.github.pagehelper.PageHelper">
					<property name="properties" value="dialect=mysql" />
				</bean>
			</list>
		</property>
	</bean>
	<!-- 创建各个dao层接口的bean -->
	<bean id="oaUserdao" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.hfxt.Userdao.OAUserdao" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<!--创建各个biz层实现类的bean -->
	<bean id="oaUserdaoBiz" class="com.hfxt.bizImpl.OABizImpl">
		<property name="oaUserdao" ref="oaUserdao" />
	</bean>
